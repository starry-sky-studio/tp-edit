{
  // 启用保存即格式化
  "editor.formatOnSave": true,
  // Biome 作为 JS/TS 的唯一格式化器（遵循 biome.json 中 trailingCommas: \"none\"）
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // 其他文件类型使用 Prettier（例如样式、Markdown 等）
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Tailwind 扩展配置
  "tailwindCSS.experimental.classRegex": [
    "class:\\s*?[\"'`]([^\"'`]*).*?,"
  ],
  // 保存时只让 Biome 自动修复（包括格式和 lint）
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "always"
  },
  // 在本项目禁用 ESLint 和 Prettier（避免与 Biome 冲突）
  "eslint.enable": false,
  "prettier.enable": false
}
